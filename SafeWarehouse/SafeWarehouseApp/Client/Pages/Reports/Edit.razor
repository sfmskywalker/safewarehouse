                            {
                                var deleteDamageClickHandler = EventCallback.Factory.Create<MouseEventArgs>(this, () => OnDeleteDamageClick(damage));
                                var editDamageClickHandler = EventCallback.Factory.Create<MouseEventArgs>(this, () => OnEditDamageClick(damage));
                                <li class="py-4">
                                    <div class="flex items-center space-x-4">
