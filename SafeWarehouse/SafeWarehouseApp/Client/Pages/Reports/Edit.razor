@using Microsoft.AspNetCore.Components.Web
@page "/report/{id}"
<div class="relative z-10 flex-shrink-0 flex h-16 bg-white border-b border-gray-200">
    <MobileMenuButton/>
    <div class="flex-1 px-4 flex justify-between">
        <div class="flex-1"></div>
        <div class="ml-4 flex items-center space-x-2 lg:ml-6">
            <NavLink href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900">
                Versturen
            </NavLink>
        </div>
    </div>
</div>
<main class="flex-1 overflow-y-auto focus:outline-none" tabindex="0" x-data="" x-init="$el.focus()">
    <div class="relative mx-auto md:px-12">
        <div class="pt-10 pb-16">
            <div class="px-4 sm:px-6 md:px-0">
                <h1 class="text-3xl font-extrabold text-gray-900">@Report.Title</h1>
            </div>
            <div class="px-4 sm:px-6 md:px-0">
                <div class="py-6">
                    <!-- Tabs -->
                    <div class="lg:hidden">
                        <label for="selected-tab" class="sr-only">Selecteer een onderdeel</label>
                        <select id="selected-tab" name="selected-tab" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-rose-500 focus:border-rose-500 sm:text-sm rounded-md">
                            <option selected="">Plattegrond</option>
                            <option>Rapport</option>
                        </select>
                    </div>
                    <div class="hidden lg:block">
                        <div class="border-b border-gray-200">
                            <nav class="-mb-px flex">
                                <!-- Current: "border-rose-500 text-rose-600", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
                                <a href="#" class="border-rose-500 text-rose-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                                    Plattegrond
                                </a>
                                <a href="#" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 whitespace-nowrap ml-8 py-4 px-1 border-b-2 font-medium text-sm">
                                    Rapport
                                </a>
                            </nav>
                        </div>
                    </div>

                    <div class="py-8 xl:py-10">
                        <div class="xl:grid xl:grid-cols-3">
                            <div class="xl:col-span-2 xl:pr-8 xl:border-r xl:border-gray-200">
                                <div>
                                    <div>
                                        <div class="design-canvas relative overflow-auto">
                                            <img src="@Report.File.GetImageDataUrl()" alt="" class="select-none"/>
                                            @foreach (var damage in Report.Damages)
                                            {
                                                <div class="damage flex flex-col justify-center" style="left: @(damage.Left)px; top: @(damage.Top)px; width: @(damage.Width)px; height: @(damage.Height)px;" data-damage-id="@damage.Id">
                                                    <span class="text-2xl font-semibold text-rose-500 text-center">@damage.Number</span>
                                                </div>
                                            }
                                        </div>
                                        <aside class="mt-8 xl:hidden">
                                            @DisplayDamages()
                                        </aside>
                                    </div>
                                </div>
                            </div>
                            <aside class="hidden xl:block xl:pl-8">
                                @DisplayDamages()
                            </aside>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

