                                <div class="col-span-12 sm:col-span-6">
                                    <label for="materialId" class="block mb-1 text-sm font-medium text-gray-700">
                                        Materiaal
                                    </label>
                                    <InputSelect @bind-Value="Damage.MaterialId" id="materialId" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm rounded-md">
                                        <option value="1">Geen</option>
                                        <option value="2">Hout</option>
                                        <option value="3">Ijzer</option>
                                        <option value="">Anders</option>
