@page "/report/create"
<div class="relative z-10 flex-shrink-0 flex h-16 bg-white border-b border-gray-200">
    <MobileMenuButton/>
</div>

<main class="flex-1 overflow-y-auto focus:outline-none" tabindex="0" x-data="" x-init="$el.focus()">
    <div class="relative max-w-4xl mx-auto md:px-8 xl:px-0">
        <div class="pt-10 pb-16">
            <div class="px-4 sm:px-6 md:px-0">
                <h1 class="text-3xl font-extrabold text-gray-900">Nieuw Rapport</h1>
            </div>
            <div class="px-4 sm:px-6 md:px-0">
                <div class="py-6">

                    <form>
                        <div class="space-y-6">
                            <div>
                                <div class="mt-1">
                                    <div class="mt-2 sm:mt-0 sm:col-span-2">
                                        <div class="relative flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
                                            <div class="space-y-1 text-center">
                                                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                                                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                                </svg>
                                                <div class="flex text-sm text-gray-600">
                                                    <label for="file-upload" class="cursor-pointer bg-white rounded-md font-medium text-pink-600 hover:text-pink-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-pink-500">
                                                        <span>Upload een afbeelding</span>
                                                        <InputFile OnChange="@OnFileChanged" id="file-upload" class="absolute opacity-0 w-full h-full top-0 left-0"/>
                                                    </label>
                                                    <p class="pl-1">of sleep naar hier</p>
                                                </div>
                                                <p class="text-xs text-gray-500">
                                                    PNG, JPG, GIF tot 100MB
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    @{
                                        var imageDataUrl = SelectedImageUrl;
                                    }
                                    @if (imageDataUrl != null)
                                    {
                                        <div class="mt-2">
                                            <img src="@imageDataUrl" alt=""/>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="flex justify-end">
                                <NavLink href="/" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">
                                    Annuleren
                                </NavLink>
                                <button type="submit"
                                        @onclick="@OnNextButtonClick"
                                        @onclick:preventDefault
                                        class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-500 hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">
                                    Verder
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</main>