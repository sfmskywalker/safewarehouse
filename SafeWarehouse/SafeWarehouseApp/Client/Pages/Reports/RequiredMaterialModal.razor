<ModalLayout>
    <EditForm EditContext="RequiredMaterialContext" OnValidSubmit="OnValidSubmit" class="space-y-6">
        <div class="mt-3 sm:mt-0 sm:ml-4">
            <div class="space-y-6">

                <div>
                    <label for="materialId" class="block mb-1 text-sm font-medium text-gray-700">
                        Materiaal
                    </label>
                    <select @bind="RequiredMaterial.MaterialId" id="materialId" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm rounded-md">
                        @foreach (var material in Materials)
                        {
                            <option value="@material.Id">@material.Name</option>
                        }
                    </select>
                </div>

                <div>
                    <label for="requiredQuantity" class="block mb-1 text-sm font-medium text-gray-700">
                        Aantal
                    </label>
                    <InputNumber @bind-Value="@RequiredMaterial.Quantity" id="requiredQuantity" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm"/>
                </div>

            </div>

            <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-pink-600 text-base font-medium text-white hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 sm:ml-3 sm:w-auto sm:text-sm">
                    OK
                </button>
            </div>
        </div>
    </EditForm>
</ModalLayout>