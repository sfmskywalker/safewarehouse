@page "/"
@using SafeWarehouseApp.Client
@namespace SafeWarehouseApp.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <title>SafeWarehouseApp</title>
    <base href="/"/>
    <link href="https://rsms.me/inter/inter.css" rel="stylesheet">
    <link href="styles.css" rel="stylesheet"/>
    <link href="SafeWarehouseApp.Client.styles.css" rel="stylesheet"/>
    <link href="manifest.json" rel="manifest"/>
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png"/>
    <link href="_content/Blazored.Modal/blazored-modal.css" rel="stylesheet"/>
    <script src="js/lib/alpinejs/dist/alpine.js"></script>
    <script src="js/lib/idb/build/iife/index-min.js"></script>
    <script src="js/lib/interactjs/dist/interact.min.js"></script>
    <script src="js/lib/hammerjs/hammer.min.js"></script>
</head>

<body>
@if (SafeWarehouseApp.Server.Program.HostingModel == BlazorHostingModel.Server)
{
    <component type="typeof(App)" render-mode="@RenderMode.ServerPrerendered"/>
}
else
{
    <div id="app">
        <div class="w-full h-full fixed block top-0 left-0 bg-white opacity-75 z-50">
            <span class="text-rose-500 top-1/2 my-0 mx-auto block relative w-0 h-0" style="top: 50%;">
                <svg class="h-20 w-20 animate-spin" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z"/>
                    <circle cx="12" cy="12" r="3"/> <line x1="12" y1="21" x2="12" y2="21.01"/> <line x1="3" y1="9" x2="3" y2="9.01"/> <line x1="21" y1="9" x2="21" y2="9.01"/> <path d="M8 20.1a9 9 0 0 1 -5 -7.1"/>
                    <path d="M16 20.1a9 9 0 0 0 5 -7.1"/> <path d="M6.2 5a9 9 0 0 1 11.4 0"/>
                </svg>
                Versie 1.0.0
            </span>
        </div>
    </div>
}

<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@if (SafeWarehouseApp.Server.Program.HostingModel == BlazorHostingModel.Server)
{
    <script src="_framework/blazor.server.js"></script>
}
else
{
    <script src="_framework/blazor.webassembly.js"></script>
}
<script src="_content/Blazored.Modal/blazored.modal.js"></script>
<script>navigator.serviceWorker.register('service-worker.js');</script>
</body>

</html>