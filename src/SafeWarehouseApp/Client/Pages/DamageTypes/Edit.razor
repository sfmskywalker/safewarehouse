@page "/damage-types/create"
@page "/damage-types/{id}"
<div class="relative z-10 flex-shrink-0 flex h-16 bg-white border-b border-gray-200">
    <MobileMenuButton/>
</div>
<main class="flex-1 overflow-y-auto focus:outline-none" tabindex="0" x-data="" x-init="$el.focus()">
    <div class="relative mx-auto md:px-12">
        <div class="pt-10 pb-16">
            <div class="px-4 sm:px-6 md:px-0">
                <h1 class="text-3xl font-extrabold text-gray-900">@(DamageType.Title is null or "" ? "Nieuwe Schadesoort" : DamageType.Title)</h1>
            </div>
            <div class="mt-4 px-4 sm:px-6 md:px-0 sm:max-w-lg">
                <EditForm EditContext="DamageTypeContext" class="space-y-6" OnValidSubmit="OnValidSubmit">
                    <div>
                        <label for="title" class="block mb-1 text-sm font-medium text-gray-700">Naam</label>
                        <InputText @bind-Value="DamageType.Title" id="title" type="text" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm"/>
                    </div>
                    <div class="mt-4 py-4 px-4 flex justify-end sm:px-6">
                        <a href="damage-types" class="bg-white border border-gray-300 rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">
                            Annuleren
                        </a>
                        <button type="submit" class="ml-5 bg-pink-600 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900">
                            Opslaan
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</main>